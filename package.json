{
  "name": "vite-plugin-html-inline-sources",
  "version": "0.0.2",
  "description": "Vite plugin for inlining JS, CSS and SVG into index.html with a declarative vite-inline attribute",
  "keywords": [
    "vite",
    "vite-plugin",
    "html",
    "javascript",
    "css",
    "svg"
  ],
  "author": "Adam McKee <adam.be.g84d@gmail.com>",
  "license": "BSD-2-Clause",
  "type": "module",
  "main": "plugin.js",
  "types": "plugin.d.ts",
  "scripts": {
    "check": "pnpm tsc --noEmit",
    "gen:types": "pnpm tsc --declaration --emitDeclarationOnly --stripInternal --removeComments --outDir .",
    "test": "node --test 'test/**/*.spec.js'",
    "tsc": "tsc plugin.js --allowJs --moduleResolution NodeNext --module NodeNext"
  },
  "dependencies": {
    "magic-string": "^0.30.15",
    "parse5": "^7.2.1"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
  },
  "files": [
    "package.json",
    "plugin.d.ts",
    "plugin.js",
    "README.md"
  ]
}
